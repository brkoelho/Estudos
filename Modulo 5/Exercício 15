package kata

import (
  "fmt"
)

func SortMyString(word string) string {
  var oddLetters, evenLetters string
  for i := 0 ; i < len(word) ; i++ {
    if i%2 == 0 {
      evenLetters += string(word[i])
    }
    if i%2 != 0 {
      oddLetters += string(word[i])   
    }
  }
return fmt.Sprintf("%s %s", evenLetters, oddLetters)
}